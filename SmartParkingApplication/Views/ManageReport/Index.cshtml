@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Báo cáo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Báo cáo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            
                        </div>
                        <!-- /.Ticket-header -->
                        <div class="card-body">
                           
                        </div>
                        <!-- /.Ticket-body -->
                        <!-- The Modal create new Monthly Ticket -->
                        <div class="modal fade" id="myModalReport" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width:110%">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Thiết lập giá vé</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:40px;margin-top:5px">
                                                    Loại xe
                                                </div>
                                                <div class="col-md-7">
                                                    <select class="form-control" id="cbTypeOfvehicle" onchange="reloadModalPR()">
                                                        <option value="0">Xe máy</option>
                                                        <option value="1">Ô tô</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:40px;margin-top:5px">
                                                    Giá theo ngày
                                                </div>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="DayPrice" placeholder="Giá theo ngày" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:40px;margin-top:5px">
                                                    Giá vé tháng
                                                </div>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="MonthPrice" placeholder="Giá vé tháng" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:40px;margin-top:5px">
                                                    Giá block đầu
                                                </div>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="FirstBlockPrice" placeholder="Giá block đầu" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:40px;margin-top:5px">
                                                    Giá block tiếp theo
                                                </div>
                                                <div class="col-md-7">
                                                    <input type="text" class="form-control" id="NextBlockPrice" placeholder="Giá block tiếp theo" disabled />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="btnSettingPrice" onclick="">ad</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
