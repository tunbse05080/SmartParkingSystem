
@{
    ViewBag.Title = "WorkingShiftStatistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thống kê ca làm việc</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thống kê ca làm việc</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <strong style="font-size:x-large">Bãi đỗ</strong>
                            <select class="form-control w-25" onchange="ComboboxUserName(3)" id="cbparkingPlaceWS">
                            </select><br />
                            <strong style="font-size:x-large">Nhân viên</strong><br />
                            <select class="form-control w-25" onchange="loadChartWorkingShift()" id="cbUserNameWS">
                            </select><br />
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="ChartWorkingShift"></div>
                            <div class="row" id="dvChartWorkingShift" hidden>
                                <div class="col-sm-6">
                                    <table id="tbChartWorkingShift" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Tháng</th>
                                                <th>Số ca làm việc</th>
                                            </tr>
                                        </thead>
                                        <tbody class="tbody" id="tbodyChartWorkingShift"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
