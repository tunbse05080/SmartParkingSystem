                                                <label for="Date">Ngày nhập</label>
                                                <input type="text" class="form-control" id="DateCardBreak" placeholder="Ngày nhập" />
                                            </div>
                                            <div class="form-group">
                                                <label for="Status">trạng thái thẻ</label>
