
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý thẻ</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lý thẻ</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">

                            <div class="dropdown">
                                <strong style="font-size:x-large">Bãi đỗ     </strong>
                                <button class="btn btn-primary dropdown-toggle" style="margin-top:-10px" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    FPT Place
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">FPT Place</a>
                                    <a class="dropdown-item" href="#">Fsoft-1</a>
                                    <a class="dropdown-item" href="#">Fsoft-2</a>
                                </div>
                            </div><br />
                            <div class="row invoice-info">
                                <!-- ./col -->
                                <div class="col-lg-3 col-6">
                                    <!-- small box -->
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <h3>100<sup style="font-size: 20px"></sup></h3>
                                            <p>Tổng số thẻ</p>
                                        </div>
                                    </div>
                                </div>
                                <!-- ./col -->
                            </div>

                            <div class="row">
                                <div class="col-md-9">
                                    <button type="button" data-toggle="modal" data-target="#myModalCard" onclick="clearTextBoxCard();" class="btn btn-success">Thêm thẻ</button>
                                </div>
                                <div class="col-md-3">
                                    <form class="form-inline active-purple-3 active-purple-4">
                                        <i class="fas fa-search" aria-hidden="true" onclick="loadDataCard(true)"></i>
                                        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search" id="txtSearchCard">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Số thẻ</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody class="tbody" id="tbodyCard"></tbody>
                                <tfoot>
                                    <tr>
                                        <th>Số thẻ</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div id="paginationCard" class="pagination" style="margin-top:10px">
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- The Modal create new card -->
                        <div class="modal fade" id="myModalCard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width:110%">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Thêm thẻ </h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="Id">Id</label>
                                            <input type="text" class="form-control" id="CardID" placeholder="Id" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="CardNumber">Số thẻ</label>
                                            <input type="text" class="form-control" id="CardNumber" placeholder="Số thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Date">Ngày nhập</label>
                                            <input type="text" class="form-control" id="Date" placeholder="Ngày nhập" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="Status" placeholder="trạng thái thẻ" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" id="btnAddCard" onclick="return AddCard();">thêm</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- The Modal edit card -->
                        <div class="modal fade" id="myModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width:110%">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Thông tin thẻ</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="Id">Id</label>
                                            <input type="text" class="form-control" id="IdCardEdit" placeholder="Id" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="CardNumber">Số thẻ</label>
                                            <input type="text" class="form-control" id="CardNumberEdit" placeholder="Số thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Date">Ngày nhập</label>
                                            <input type="text" class="form-control" id="DateCardEdit" placeholder="Ngày nhập" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="StatusCardEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        @*<button type="button" class="btn btn-primary" id="btnAddCard" onclick="return AddCard();">Thêm</button>*@
                                        <button type="button" class="btn btn-success" id="btnUpdateCard" onclick="return UpdateCard();">Sửa</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
            </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->