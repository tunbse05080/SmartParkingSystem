@model IEnumerable<SmartParkingApplication.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lí nhân viên</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" onclick="location.href='@Url.Action("Create", "ManageUser")';return false;" class="btn btn-success">Thêm nhân viên</button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" onclick="location.href='@Url.Action("WorkingCalendar", "ManageUser")';return false;" class="btn btn-success">Lịch làm việc</button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-success">Xuất danh sách nhân viên</button>
                                </div>
                                <div class="col-md-3">
                                    <form class="form-inline active-purple-3 active-purple-4">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên</th>
                                        <th>Ngày Sinh</th>
                                        <th>Mail</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Bãi đỗ</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ParkingPlace.NameOfParking);
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-primary">@Html.ActionLink("Detail", "Detail", new { id = item.UserID })</button>
                                            <button type="button" class="btn btn-success">@Html.ActionLink("Edit", "Edit", new { id = item.UserID })</button>
                                            <button type="button" class="btn btn-danger">@Html.ActionLink("Edit", "Edit", new { id = item.UserID })</button>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên</th>
                                        <th>Ngày Sinh</th>
                                        <th>Mail</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Bãi đỗ</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->