@model IEnumerable<SmartParkingApplication.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lí nhân viên</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-3">
                                    <button type="button" onclick="location.href='@Url.Action("Create", "ManageUser")';return false;" class="btn btn-success">Thêm nhân viên</button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" onclick="location.href='@Url.Action("WorkingCalendar", "ManageUser")';return false;" class="btn btn-success">Lịch làm việc</button>
                                </div>
                                <div class="col-md-3">
                                    <button type="button" class="btn btn-success">Xuất danh sách nhân viên</button>
                                </div>
                                <div class="col-md-3">
                                    <form class="form-inline active-purple-3 active-purple-4">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên</th>
                                        <th>Ngày Sinh</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Bãi đỗ</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Convert.ToDateTime(item.DateOfBirth).ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Role.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParkingPlace.NameOfParking)
                                            </td>
                                            <td>
                                                <button class="btn btn-primary" onclick="location.href='@Url.Action("Details", "ManageUser",new { id = item.UserID})';return false;">Chi tiết</button>
                                                <button class="btn btn-success" onclick="location.href='@Url.Action("Edit", "ManageUser",new { id = item.UserID})';return false;">Sửa</button>
                                                <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "ManageUser",new { id = item.UserID})';return false;">Xóa</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên</th>
                                        <th>Ngày Sinh</th>
                                        <th>Mail</th>
                                        <th>Số điện thoại</th>
                                        <th>Chức vụ</th>
                                        <th>Bãi đỗ</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                        <!-- The Modal -->
                        <div class="modal" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">Gia Hạn Vé Tháng</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-5" style="padding-left:40px">
                                                        Ngày đăng ký
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input type="date" value="2020-11-20" disabled />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-5" style="padding-left:40px">
                                                        Ngày hết hạn
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input type="date" value="2020-12-20" disabled />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-5" style="padding-left:40px">
                                                        Thời gian gia hạn
                                                    </div>
                                                    <div class="col-md-7">
                                                        <div class="dropdown" style="width:100%">
                                                            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                1 tháng
                                                            </button>
                                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                                <a class="dropdown-item" href="#">1 tháng</a>
                                                                <a class="dropdown-item" href="#">6 tháng</a>
                                                                <a class="dropdown-item" href="#">1 năm</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-md-5" style="padding-left:40px">
                                                        Thành tiền
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input type="text" value="500.000 VND" disabled />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Modal footer -->
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Gia Hạn</button>
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->