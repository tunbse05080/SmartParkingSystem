@model IEnumerable<SmartParkingApplication.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập </title>
    @*<link rel="stylesheet" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" href="~/Content/LoginCss.css" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
   
    
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
            crossorigin="anonymous"></script>


</head>
<body>


    <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6col-md-offset-3">
                        <h2>Login to Your Account</h2>
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphiconglyphicon-user"></i></span>
                                            <input type="text" id="username" class="form-control" placeholder="Username">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphiconglyphicon-lock"></i></span>
                                            <input type="password" class="form-control" id="password" placeholder="Password">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <button class="btn btn-warning form-control" type="submit" id="savedata"><i class="glyphiconglyphicon-log-in"></i>&nbsp;Login</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    @*<div class="login-page">
        <div class="form">
           
            <form class="login-form">
                <input type="text" id="userid"  placeholder="Tên Đăng Nhập" />
                <input type="password" id="password" placeholder="Mật Khẩu" />
                <button type="submit" id="savedata">Đăng Nhập</button>
                
            </form>
        </div>
    </div>*@
   
    <script>
    $(document).ready(function () {
        $('#savedata').click(function () {
            var data = {
                
                "password": $("#password").val(),
                "username": $("#username").val(),
                
                
            };
            $.ajax({
                url: "/LoginUser/ValidateUser",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.Success) {
                        alert('Login Sucessful');
                        $.get("@Url.Action("Index", "Home")", function (data) {
                            $('.container').html(data);
                        });
                    }
                    else {
                        @*alert('Login Fail!!!');
                        window.location.href = "@Url.Action("Index", "LoginUser")";*@

                    }
                },
                error: function () {
                    alert('Login Fail!!!');
                }
            });
        });
    });
    </script>
    


</body>
</html>
