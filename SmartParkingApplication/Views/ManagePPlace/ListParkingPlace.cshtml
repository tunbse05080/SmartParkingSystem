@model IEnumerable<SmartParkingApplication.Models.ParkingPlace>
@{
    ViewBag.Title = "ListParkingPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách bãi đỗ</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <button type="button" onclick="location.href='@Url.Action("Create", "ManagePPlace")';return false;" class="btn btn-success">Thêm bãi đỗ</button>
                                </div>
                                <div class="col-md-3">
                                    <form class="form-inline active-purple-3 active-purple-4">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên bãi đỗ</th>
                                        <th>Vị trí</th>
                                        <th>Sức chứa</th>
                                        <th>Sức chứa ô tô</th>
                                        <th>Sức chứa xe máy</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.NameOfParking)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NumberOfSlot)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NumberOfCar)</td>
                                            <td>@Html.DisplayFor(modelItem => item.NumberOfMotoBike)</td>
                                            <td>
                                                <button class="btn btn-primary" onclick="location.href='@Url.Action("Details", "ManagePPlace",new { id = item.ParkingPlaceID})'">Chi tiết</button>
                                                <button class="btn btn-success" onclick="location.href='@Url.Action("Edit", "ManagePPlace",new { id = item.ParkingPlaceID})'">Sửa</button>
                                                <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "ManagePPlace",new { id = item.ParkingPlaceID})'">Khóa</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên bãi đỗ</th>
                                        <th>Vị trí</th>
                                        <th>Sức chứa</th>
                                        <th>Sức chứa ô tô</th>
                                        <th>Sức chứa xe máy</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->