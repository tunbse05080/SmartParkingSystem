
@{
    ViewBag.Title = "ListParkingPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>DataTables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách bãi đỗ</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-9">
                                    <button type="button" onclick="location.href='@Url.Action("Create", "ManagePPlace")';return false;" class="btn btn-success">Thêm bãi đỗ</button>
                                </div>
                                <div class="col-md-3">
                                    <form class="form-inline active-purple-3 active-purple-4">
                                        <i class="fas fa-search" aria-hidden="true"></i>
                                        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search" aria-label="Search">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên bãi đỗ</th>
                                        <th>Vị trí</th>
                                        <th>Sức chứa ô tô</th>
                                        <th>Sức chứa xe máy</th>
                                        <th>Chỗ trống ô tô</th>
                                        <th>Chỗ trống xe máy </th>
                                        <th>Thao tác </th>
                                    </tr>
                                </thead>
                                <tbody id="tbodypp">  </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Tên bãi đỗ</th>
                                        <th>Vị trí</th>
                                        <th>Sức chứa ô tô</th>
                                        <th>Sức chứa xe máy</th>
                                        <th>Chỗ trống ô tô</th>
                                        <th>Chỗ trống xe máy </th>
                                        <th>Thao tác </th>

                                    </tr>
                                </tfoot>
                            </table>
                            <div id="paginationpp" class="pagination" style="margin-top:10px">
                            </div>
                        </div>

                        <!-- /.card-body -->
                        <!-- Modal Update PP -->
                        <div class="modal fade" id="myModalPPUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width:110%">
                                    <div class="modal-header">
                                        <h4 class="modal-title" id="myModalLabel">Thông tin thẻ</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="Id">Id</label>
                                            <input type="text" class="form-control" id="ParkingPlaceIDEdit" placeholder="Id" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="CardNumber">Số thẻ</label>
                                            <input type="text" class="form-control" id="NameOfParkingEdit" placeholder="Số thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Date">Ngày nhập</label>
                                            <input type="text" class="form-control" id="LocationEdit" placeholder="Ngày nhập" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="NumberOfSlotEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="NumberOfCarEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="NumberOfMotoBikeEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="NumberCarBlankEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                        <div class="form-group">
                                            <label for="Status">trạng thái thẻ</label>
                                            <input type="text" class="form-control" id="NumberMotoBikeBlankEdit" placeholder="trạng thái thẻ" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        @*<button type="button" class="btn btn-primary" id="btnAddCard" onclick="return AddCard();">Thêm</button>*@
                                        <button type="button" class="btn btn-success" id="btnUpdatePP" onclick="return UpdatePP();">Sửa</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Modedal Update pp -->

                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->